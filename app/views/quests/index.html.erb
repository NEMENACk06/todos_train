  <div class="w-full mx-auto p-6 bg-white rounded-lg shadow-md">
    <div class="mb-8 text-center">
      <h1 class="text-2xl font-bold text-indigo-600">Your Name</h1>
      <p class="text-gray-600">Other information about you</p>
      <div class="my-5">
        <%= link_to "My brag document", quests_path, class: "text-blue-500 hover:underline" %>
      </div>
      <%= image_tag "image.png", class: "w-32 h-32 mx-auto rounded-full shadow" %>
    </div>

    <div class="space-y-6">
      <%= turbo_frame_tag "new_quest_form" do %>
        <%= render "form", quest: @quest %>
      <% end %>

      <%= turbo_frame_tag "quests" do %>
        <%= render partial: "quest", collection: @quests, as: :quest %>
      <% end %>
    </div>
  </div>
