<%= turbo_frame_tag dom_id(quest) do %>
  <div class="flex items-center justify-between p-3 border-b">
    <div class="flex items-center space-x-3">
      <%= form_with model: quest, method: :patch do |f| %>
        <%= f.check_box :is_done,
          checked: quest.is_done,
          class: "h-5 w-5 text-indigo-600 border-gray-300 rounded",
          data: { controller: "checkbox", action: "change->checkbox#submit" } %>
      <% end %>

      <div class="<%= quest.is_done ? "line-through text-gray-400" : "text-gray-800" %>">
        <%= quest.name %>
      </div>
    </div>

    <%= link_to quest_path(quest),
        data: { turbo_method: :delete },
        class: "text-red-500 hover:text-red-700" do %>
      ‚ùå
    <% end %>
  </div>
<% end %>
