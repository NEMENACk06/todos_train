<% q = local_assigns[:quest] || @quest || Quest.new %>

<%= form_with(model: q, class: "flex items-center space-x-4") do |form| %>
  <%= form.text_field :name,
        class: "border rounded px-3 py-2 flex-1",
        placeholder: "Enter quest...",
        required: true %>

  <%= form.hidden_field :is_done, value: (q.is_done.nil? ? false : q.is_done) %>

  <%= form.submit "Add",
        class: "px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700" %>
<% end %>
